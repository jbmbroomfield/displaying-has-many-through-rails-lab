<h1><%= @doctor.name %></h1>
<p>Department: <%= @doctor.department %></p>

<h3>Appointments</h3>
<% @doctor.appointments.each do |appointment| %>
    <br>
    <p><%= link_to appointment.datetime_display, appointment %></p>
    <p>Patient: <%= link_to appointment.patient_name, appointment.patient %></p>
<% end %>